@model ContactModel

@{
    ViewData["Title"] = "Adicionar contato";
}

<form asp-controller="Contact" asp-action="AddContacts" method="post">

    <div class="text-center">
        <h1 class="display-4">Cadastrar contato</h1>

        <div class="form-group text-start">
            <label for="formGroupExampleInput" class="form-label d-grid gap-2 d-md-flex justify-content-md-start">Nome</label>
            <input type="text" asp-for="Nome" class="form-control" placeholder="Exemplo: José da Silva">
            @Html.ValidationMessageFor(x => x.Nome)
        </div>
        <div class="form-group text-start">
            <label for="formGroupExampleInput2" class="form-label d-grid gap-2 d-md-flex justify-content-md-start">Email</label>
            <input type="text" asp-for="Email" class="form-control" placeholder="Exemplo: josedasilva@gmail.com">
            @Html.ValidationMessageFor(x => x.Email)
        </div>
        <div class="form-group text-start">
            <label for="formGroupExampleInput2" class="form-label d-grid gap-2 d-md-flex justify-content-md-start">Celular</label>
            <input type="text" asp-for="Celular" class="form-control" placeholder="Exemplo: 24996545690">
            @Html.ValidationMessageFor(x => x.Celular)
        </div>

        <button class="btn btn-primary" type="submit">Adicionar</button>
        <a class="btn btn-secondary" asp-controller="Contact" asp-action="Contacts">Voltar</a>
    </div>
</form>