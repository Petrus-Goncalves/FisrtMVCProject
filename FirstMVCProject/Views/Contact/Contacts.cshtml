@model List<ContactModel>

@{
    ViewData["Title"] = "Listagem de contatos";
}

@if (TempData["SucessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
        @TempData["SucessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData["SucessDeleteMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
        @TempData["SucessDeleteMessage"]
    </div>
}

@if (TempData["ErrorDeleteMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
        @TempData["ErrorDeleteMessage"]
    </div>
}

<br />

<div class="text-center">
    <h1 class="display-4">Listagem de contatos</h1>
    <br />
    <br />

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" asp-controller="Contact" asp-action="AddContacts">Criar contato</a>
    </div>
    <br />

    <table class="table" id="tabela-contatos">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">Celular</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var contato in Model)
                {
                    <tr>
                        <th scope="row">@contato.Id</th>
                        <td>@contato.Nome</td>
                        <td>@contato.Email</td>
                        <td>@contato.Celular</td>
                        <td>
                            <div class="btn-group-sm d-grid gap-2 d-md-flex justify-content-center">
                                <a class="btn btn-primary" asp-route-id="@contato.Id" asp-controller="Contact" asp-action="EditContacts">Editar</a>
                                <a class="btn btn-danger" asp-route-id="@contato.Id" asp-controller="Contact" asp-action="DeleteContacts">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>