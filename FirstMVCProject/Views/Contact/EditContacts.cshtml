@model ContactModel

@{
    ViewData["Title"] = "Editar contato";
}

<form asp-controller="Contact" asp-action="ConfirmationEditContact" method="post">

    @if (TempData["SucessEditMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @TempData["SucessEditMessage"]
        </div>
    }

    @if (TempData["ErrorEditMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @TempData["ErrorEditMessage"]
        </div>
    }
    <div class="text-center">
        <h1 class="display-4">Editar contato</h1>

        <div class="form-group text-start">
            <label for="formGroupExampleInput" class="form-label d-grid gap-2 d-md-flex justify-content-md-start">Nome</label>
            <input asp-for="Nome" type="text" class="form-control" id="formGroupExampleInput" placeholder="Exemplo: José da Silva" value="@Model.Nome">
            @Html.ValidationMessageFor(x => x.Nome)
        </div>
        <div class="form-group text-start">
            <label for="formGroupExampleInput2" class="form-label d-grid gap-2 d-md-flex justify-content-md-start">Email</label>
            <input asp-for="Email" type="text" class="form-control" id="formGroupExampleInput2" placeholder="Exemplo: josedasilva@gmail.com" value="@Model.Email">
            @Html.ValidationMessageFor(x => x.Email)
        </div>
        <div class="form-group text-start">
            <label for="formGroupExampleInput2" class="form-label d-grid gap-2 d-md-flex justify-content-md-start">Celular</label>
            <input asp-for="Celular" type="text" class="form-control" id="formGroupExampleInput2" placeholder="Exemplo: 24996545690" value="@Model.Celular">
            @Html.ValidationMessageFor(x => x.Celular)
        </div>

        <button class="btn btn-primary" type="submit" asp-route-id="@Model.Id" asp-action="ConfirmationEditContact">Editar</button>
        <a class="btn btn-secondary" asp-controller="Contact" asp-action="Contacts">Voltar</a>
    </div>
</form>
