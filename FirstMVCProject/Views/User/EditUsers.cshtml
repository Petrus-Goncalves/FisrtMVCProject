@using FirstMVCProject.Enums
@using FirstMVCProject.Models.User
@model EditUserModel

@{
    ViewData["Title"] = "Editar usuário";
}

<form asp-controller="User" asp-action="EditUsers" method="post">

    <div class="text-center">
        <h1 class="display-4">Editar usuário</h1>

            <div class="form-group text-start">
                <label class="form-label d-grid gap-2 d-md-flex justify-content-md-start">Nome</label>
                <input asp-for="Nome" type="text" class="form-control" placeholder="Exemplo: José da Silva">
                @Html.ValidationMessageFor(x => x.Nome)
            </div>

            <div class="form-group text-start">
                <label class="form-label d-grid gap-2 d-md-flex justify-content-md-start">Email</label>
                <input asp-for="Email" type="text" class="form-control" placeholder="Exemplo: 24996545690">
                @Html.ValidationMessageFor(x => x.Email)
            </div>

            <div class="form-group text-start">
                <label class="form-label d-grid gap-2 d-md-flex justify-content-md-start">Login</label>
                <input asp-for="Login" type="text" class="form-control" placeholder="Exemplo: josedasilva@gmail.com">
                @Html.ValidationMessageFor(x => x.Login)
            </div>

            <div class="form-group text-start">
                <label asp-for="Perfil" class="form-label d-grid gap-2 d-md-flex justify-content-md-start">Perfil</label>
                <select asp-for="Perfil" class="form-select" aria-label="Default select example"
                        asp-items="Html.GetEnumSelectList<EnumPerfilUsuario>()">
                    <option selected value=""></option>
                </select>
                @Html.ValidationMessageFor(x => x.Perfil)
            </div>

            <div class="form-group text-start">
                <label class="form-label d-grid gap-2 d-md-flex justify-content-md-start">Senha</label>
                <input asp-for="Senha" type="password" class="form-control">
                @Html.ValidationMessageFor(x => x.Senha)
            </div>

            <div class="form-group text-start">
                <label class="form-label d-grid gap-2 d-md-flex justify-content-md-start">Confirmar senha</label>
                <input asp-for="ConfirmarSenha" type="password" class="form-control">
                @Html.ValidationMessageFor(x => x.ConfirmarSenha)
            </div>
        <br />
        <button class="btn btn-primary" type="submit" asp-route-id="@Model.Id" asp-action="EditUsers">Editar</button>
        <a class="btn btn-secondary" asp-controller="User" asp-action="Index">Voltar</a>
    </div>
</form>