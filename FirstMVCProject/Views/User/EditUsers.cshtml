@model UserModel

@{
    ViewData["Title"] = "Editar usuário";
}

<form asp-controller="User" asp-action="EditUsers" method="post">

    @if (TempData["SucessEditMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @TempData["SucessEditMessage"]
        </div>
    }

    @if (TempData["ErrorEditMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @TempData["ErrorEditMessage"]
        </div>
    }
    <div class="text-center">
        <h1 class="display-4">Editar usuário</h1>

        <div class="form-group text-start">
            <label for="formGroupExampleInput" class="form-label d-grid gap-2 d-md-flex justify-content-md-start">Nome</label>
            <input asp-for="Nome" type="text" class="form-control" id="formGroupExampleInput" placeholder="Exemplo: José da Silva">
            @Html.ValidationMessageFor(x => x.Nome)
        </div>

        <div class="form-group text-start">
            <label for="formGroupExampleInput2" class="form-label d-grid gap-2 d-md-flex justify-content-md-start">Celular</label>
            <input asp-for="Login" type="text" class="form-control" id="formGroupExampleInput2" placeholder="Exemplo: josedasilva@gmail.com">
            @Html.ValidationMessageFor(x => x.Login)
        </div>

        <div class="form-group text-start">
            <label for="formGroupExampleInput2" class="form-label d-grid gap-2 d-md-flex justify-content-md-start">Email</label>
            <input asp-for="Email" type="text" class="form-control" id="formGroupExampleInput2" placeholder="Exemplo: josedasilva@gmail.com">
            @Html.ValidationMessageFor(x => x.Email)
        </div>

        <div class="form-group text-start">
            <label for="formGroupExampleInput2" class="form-label d-grid gap-2 d-md-flex justify-content-md-start">Email</label>
            <input asp-for="DataCriacao" type="datetime" class="form-control" id="formGroupExampleInput2" placeholder="Exemplo: 01/01/01">
            @Html.ValidationMessageFor(x => x.DataCriacao)
        </div>


        <button class="btn btn-primary" type="submit" asp-route-id="@Model.Id" asp-action="EditUsers">Editar</button>
        <a class="btn btn-secondary" asp-controller="User" asp-action="Index">Voltar</a>
    </div>
</form>
