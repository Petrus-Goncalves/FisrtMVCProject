@using FirstMVCProject.Models.User
@model EditUserModel

@{
    ViewData["Title"] = "Deletar usuário";
}

@if (Model != null)
{
    <form asp-controller="User" asp-action="DeleteUsers" method="post">

        <br />
        <br />

        <div class="text-center">
            <h3>Realmente deseja apagar o usuário @Model.Nome ?</h3>
        </div>

        <br />
        <br />
        <div class="justify-content-center gap-2 d-md-flex">
            <a class="btn btn-danger" asp-controller="User" asp-action="Index">Cancelar exclusão</a>
            <button class="btn btn-primary" type="submit" asp-route-id="@Model.Id" asp-controller="User" asp-action="DeleteUsers">Confirmar exclusão</button>
        </div>
    </form>
}